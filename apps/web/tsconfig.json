{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"./src/*"
			],
			"~/*": [
				"./public/*"
			]
		},
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"exclude": [
		"node_modules"
	],
	"extends": "@sdns/tsconfig/nextjs.json",
	"include": [
		"next-env.d.ts",
		"next.config.mjs",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts"
	]
}